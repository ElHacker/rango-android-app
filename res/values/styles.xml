<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MyAppTheme" parent="@android:Theme.Holo.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
	<style name="MyActionBar" parent="@android:Widget.Holo.Light.ActionBar.Solid.Inverse">
	    <item name="background">@color/main_red</item>
	    <item name="android:background">@color/main_red</item>
	    
	    <item name="backgroundStacked">@color/black</item>
		<item name="android:backgroundStacked">@color/black</item>
			    
	    <item name="backgroundSplit">@color/white</item>
	    <item name="android:backgroundSplit">@color/white</item>
	</style>
    

</resources>